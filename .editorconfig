root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 3
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false
indent_size = 4

[*.yml]
indent_size = 2

# files generated by npm
[{package.json,package-lock.json}]
indent_size = 2

# files generated by composer
[{composer.json,composer.lock}]
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 8
